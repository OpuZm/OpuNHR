
@{
    Layout = null;
    ViewBag.Title = "自定义折扣管理";
    List<RestaurantListDTO> Restaurants = ViewBag.Restaurants;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>餐厅管理</title>
    @StylesEx.Render(FrameworkInfo.Name, "LayUIStyle2x")
    @StylesEx.Render(Plugin.Instance.Name, "PublicStyle")
</head>
<body>
    <header class="container-head" style="padding-top: 15px;">
        <div class="layui-form">
            <button type="button" class="layui-btn add layui-btn-normal" onclick="layerBox('/Res/Discount/NewEdit','','添加套餐自定义折扣');"><span class="layui-icon" style="font-size: 24px; color: #fff;">&#xe654;</span>添加</button>
            <div class="layui-form-item" style="float: right; padding-top: 2px;">
                <div class="layui-inline">
                    <label class="layui-form-label" style="width: 30px;">餐厅</label>
                    <div class="layui-input-inline">
                        <select class="form-control" id="Restaurant" name="Restaurant" lay-search>
                            <!--<option value="0">全部</option>-->
                            @{
                                if (Restaurants.Any())
                                {
                                    foreach (var item in Restaurants)
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="layui-inline">
                    <label class="layui-form-label" style="width: 30px;">名称</label>
                    <div class="layui-input-inline">
                        <input type="text" id="Name" name="Name" lay-verify="email" autocomplete="off" class="layui-input">
                    </div>
                </div>
         
                <div class="layui-inline">
                    <label class="layui-form-label" style="width: 60px;">开始时间</label>
                    <div class="layui-input-inline" style="width: 100px;">
                        <input type="text"  class="layui-input" id="StartDate" name="StartDate">
                    </div>
                    <label class="layui-form-label" style="width: 60px;">结束时间</label>
                    <div class="layui-input-inline" style="width: 100px;">
                        <input type="text"  class="layui-input"  id="EndDate" name="EndDate">
                    </div>
                    <button class="layui-btn layui-btn-primary" style="float: left;" id="SearchSubmit">查询</button>
                </div>
            </div>
        </div>
    </header>

    <div class="container" style="padding-right: 20px;">
        <table id="table" lay-filter="table"></table>
    </div>
    <footer class="footer-copyright">
        <img src="@Url.Content(Plugin.Instance.GetContentPath("Images/logo-footer.png"))" alt="">
    </footer>
</body>
</html>
<script type="text/html" id="bartable">
    <a class="layui-btn layui-btn-sm layui-btn-primary" lay-event="edit"><i class="iconfont">&#xe633;</i> 编辑</a>
    <a class="layui-btn layui-btn-sm layui-btn-danger" lay-event="t-del" data-id="{{d.Id}}"><i class="layui-icon" style="margin:0">&#xe640;</i>删除</a>
</script>

<script type="text/html" id="IsEnable">
    {{#  if(d.IsEnable==true){ }}
    <i class="layui-icon" style="color:#5FB878">&#xe618;</i>
    {{#  }else{ }}

    {{#  } }}
</script>
@ScriptsEx.Render(FrameworkInfo.Name, "CommonJs")
@ScriptsEx.Render(FrameworkInfo.Name, "LayUIJs2x")
@ScriptsEx.Render(Plugin.Instance.Name, "PublicJs")
@ScriptsEx.Render(Plugin.Instance.Name, "OpenTableJs")
@ScriptsEx.Render(Plugin.Instance.Name, "Keyboard")

@ScriptsEx.Render(FrameworkInfo.Name, "JqSignalR")
<script type="text/javascript">
	var isEdIT = false;
    layui.use(['element', 'table', 'layer', 'laydate'], function () {
        var element = layui.element,
            layer = layui.layer,
            table = layui.table,
            laydate = layui.laydate;
		
        var laydate = layui.laydate;
		var para = {ListType: '1',Restaurant : $('#Restaurant').val() };
        //执行一个laydate实例
        laydate.render({
            elem: '#StartDate' //指定元素
            , type: 'date'
            , format: 'yyyy-MM-dd'
        });

        laydate.render({
            elem: '#EndDate' //指定元素
            , type: 'date'
            , format: 'yyyy-MM-dd'
        });

        var winw = $(window).width() - 50;
        table.render({
            elem: '#table' //指定原始表格元素选择器（推荐id选择器）
            , url: "/Res/Discount/GetDiscounts"
            , where: para
            , height: 'full-141' //容器高度
            , request: {
                pageName: 'offset' //页码的参数名称，默认：page
            }
            , response: {
                countName: 'total' //数据总数的字段名称，默认：count
                , dataName: 'rows' //数据列表的字段名称，默认：data
            }
            , cols: [[ //标题栏
                { field: 'Name', title: '名称', width: winw * 0.18 }
                , { field: 'Restaurant', title: '餐厅', width: winw * 0.13 }
                , { field: 'Market', title: '分市', width: winw * 0.07 }
                , { field: 'Area', title: '区域', width: winw * 0.13 }
                , { field: 'IsEnable', title: '是否启用', width: winw * 0.07, toolbar: '#IsEnable' }
                , { field: 'StartDate', title: '开始时间', width: winw * 0.16 }
                , { field: 'EndDate', title: '结束时间', width: winw * 0.16 }
                , { field: 'Id', title: '操作', minWidth: '150', toolbar: '#bartable',fixed: 'right' }
            ]]
            , even: true
            , page: {
            	hash: 'fenye'
            }
            , skin : 'line'
            , limits: [5, 10, 15, 20]
            , limit: 10 //每页默认显示的数量
            , done: function (res, curr, count) {
				isEdIT = false;
            }
        });


        //监听工具条
        table.on('tool(table)', function (obj) {
            var data = obj.data;
            var id = data.Id;
            if (obj.event === 'edit') {
            	isEdIT = true;
                layerBox('/Res/Discount/NewEdit', id, '折扣编辑');
            } else if (obj.event === 'ggEdit') {
            	isEdIT = true;
                layerBox('/Res/Project/Specification', id, '规格设置编辑');
            }else if(obj.event === 't-del'){
	        	layer.confirm('确定要删除', {
					icon: 7, title:'提示',
			        btn: ['确定', '取消'] //按钮
			    }, function (index) {
			        $.ajax({
			            type: "post",
			            url: '/Res/Discount/IsDelete',
			            dataType: "json",
			            //contentType: "application/json; charset=utf-8",
			            data: {id:id},
			            async: false,
			            beforeSend: function (XMLHttpRequest) {
			                layindex = layer.open({type: 3,shadeClose: false});
			            },
			            success: function (data, textStatus) {
			                if (data["Data"] == true) {
			                	//如果当前页只有一条并且即将删除
			                	if($('#table').next().find('.layui-table-body tr').length == 1){
                                	var curr = location.hash.replace('#!fenye=', '');
                                	location.hash = '#!fenye=' + curr == 1 ? curr : --curr
                                }
								table.reload('table', {
					                where: para
					                ,page: {
									    curr: location.hash.replace('#!fenye=', '') //重新从第 1 页开始
									}
					            });
								layer.close(index);
			                    layer.msg("删除成功");
			                } else {
			                    layer.alert(data["Message"]);
			                }
			            },
			            complete: function (XMLHttpRequest, textStatus) {
			                layer.close(layindex);
			            }
			        });
			    }, function (index) {
			        layer.close(index);
			    });
	        }
        });
        

        //监听排序点击
        table.on('sort(table)', function (obj) {         
              table.reload('tableReload', {
                initSort: obj
                , where: { //请求参数
                    ListType: '1'
                    , sort: obj.field //排序字段
                    , order: obj.type //排序方式                 
                }
            });
        });

        //select条件筛选
        $('#SearchSubmit').click(function () {
     		para.Restaurant =  $('#Restaurant').val();
     		para.Name =  $('#Name').val();
     		para.StartDate =  $('#StartDate').val();
     		para.EndDate =  $('#EndDate').val();
            var curr = isEdIT ? location.hash.replace('#!fenye=', '') : 1;
            location.hash = '#!fenye=' + curr
            table.reload('table', {
                where: para
                ,page: {
                	hash: 'fenye',
				    curr: curr //重新从第 1 页开始
				}
            });
        });
    });
</script>
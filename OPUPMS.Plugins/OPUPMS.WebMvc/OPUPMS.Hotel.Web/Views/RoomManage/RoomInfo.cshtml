                                        <div class="layui-input-block">
                                            @Html.DropDownList("ddlPaymentMethodList", (IEnumerable<SelectListItem>)ViewBag.PaymentMethodList)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2 plr-none">
                                    <div class="layui-form-item">
                                        <label class="layui-form-label">电&nbsp;&nbsp;&nbsp; 话</label>
                                        <div class="layui-input-block">
                                            <input type="text" name="price" lay-verify="number" autocomplete="off" placeholder="请输入联系电话" class="layui-input">
                                        </div>
                                    </div>
                                </div>


                                <div class="col-md-2 plr-none">
                                    <div class="layui-form-item">
                                        <label class="layui-form-label">佣&nbsp;&nbsp;&nbsp; 金</label>
                                        <div class="layui-input-block">
                                            <select name="can" lay-verify="required">
                                                <option value="0">网络</option>
                                                <option value="1">佣金二</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div class="row">
                                <div class="col-md-4 plr-none">
                                    <label class="layui-form-label">账务备注</label>
                                    <div class="layui-input-block">
                                        <textarea name="desc" placeholder="请输入账务备注" style="min-height:80px;" class="layui-textarea"></textarea>
                                    </div>
                                </div>
                                <div class="col-md-4 plr-none">
                                    <label class="layui-form-label">备注</label>
                                    <div class="layui-input-block">
                                        <textarea name="desc" placeholder="请输入备注内容" style="min-height:80px;" class="layui-textarea"></textarea>
                                    </div>
                                </div>
                                <div class="col-md-4 plr-none">
                                    <div class="layui-form-item">
                                        <label class="layui-form-label">特服</label>
                                        <div class="layui-input-block">
                                            <textarea name="desc" placeholder="请输入特服内容" style="min-height:80px;" class="layui-textarea"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row mt-xs">
                                <div class="col-md-2 plr-none">
                                    <div class="layui-form-item">
                                        <label class="layui-form-label">预订类型</label>
                                        <div class="layui-input-block">
                                            <select name="can" lay-verify="required">
                                                <option value="0">直接入住</option>
                                                <option value="1">担保预定</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-2 plr-none">
                                    <div class="layui-form-item">
                                        <label class="layui-form-label">E-mail</label>
                                        <div class="layui-input-block">
                                            <input type="text" name="price" lay-verify="number" autocomplete="off" placeholder="请输入联系邮箱" class="layui-input">
                                        </div>
                                    </div>

                                </div>
                                <div class="col-md-2 plr-none">
                                    <div class="layui-form-item">
                                        <label class="layui-form-label">小孩人数</label>
                                        <div class="layui-input-block">
                                            <input type="number" name="number" value="0" lay-verify="number" autocomplete="off" class="layui-input">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2 plr-none">
                                    <div class="layui-form-item">
                                        <label class="layui-form-label">VIP接待</label>
                                        <div class="layui-input-block">
                                            <select name="paytype" lay-verify="required">
                                                <option value="">无</option>
                                                <option value="0">需要无线网</option>
                                                <option value="1">银联</option>
                                                <option value="2">微信</option>
                                                <option value="2">支付宝</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2 plr-none">
                                    <div class="layui-form-item">
                                        <label class="layui-form-label">挂账限额</label>
                                        <div class="layui-input-block">
                                            <input type="text" name="price" placeholder="0为不限" class="layui-input">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2 plr-none">
                                    <div class="layui-form-item">
                                        <label class="layui-form-label">公&nbsp;&nbsp;&nbsp; 司</label>
                                        <div class="layui-input-block">
                                            <input type="text" name="yewu" placeholder="请输入公司名称" class="layui-input">
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="row mt-sm">
                                <!-- <input type="checkbox" name=""  title="资料保密">
                                <input type="checkbox" name=""  title="房价保密">
                                <input type="checkbox" name=""  title="钟点房">
                                <input type="checkbox" name="gzwp"  lay-filter="gzwp"  title="贵重物品寄存">
                                <input type="checkbox" name=""  title="不可转账">
                                <input type="checkbox" name=""  title="设置主房">
                                <input type="checkbox" name=""  title="查客史">
                                <input type="checkbox" name="service_jsj"  lay-filter="service_jsj"  title="接送机服务">
                                <input type="checkbox" name="service_fw"  lay-filter="service_fw"  title="服务">
                                <input type="checkbox" name="service_jx"  lay-filter="service_jx"  title="叫醒服务"> -->
                            </div>
                        </div>

                        <section id="more_cz" class="b-fff  mt-sm">
                            <!-- 贵重物品信息 -->
                            <div id="gzwp" class="row" style="display: none;">
                                <div class="col-md-1 pl-none">
                                    <h3 class="tl label-title" style="line-height: 32px;">贵重物品 </h3>
                                </div>
                                <div class="col-md-2 ">
                                    <div class="layui-form-item">
                                        <label class="layui-form-label">联系人</label>
                                        <div class="layui-input-block">
                                            <input type="text" name="price" placeholder="请输入联系人姓名" class="layui-input">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2 ">
                                    <div class="layui-form-item">
                                        <label class="layui-form-label">联系电话</label>
                                        <div class="layui-input-block">
                                            <input type="text" name="price" placeholder="请输入联系人电话" class="layui-input">

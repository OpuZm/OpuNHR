                        <div class="form-room_data mt-sm xian p-sm">
                            <h3 class="tl  label-title">基本信息</h3>
                            <div class="row mt-sm">
                                <div class="col-md-2 plr-none">
                                    <div class="layui-form-item">
                                        <label class="layui-form-label">房&nbsp;&nbsp;&nbsp; 号</label>
                                        <div class="layui-input-block">
                                            <input type="text" name="roomid" class="layui-input">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2 plr-none">
                                    <div class="layui-form-item">
                                        <label class="layui-form-label">卡&nbsp;&nbsp;&nbsp; 号</label>
                                        <div class="layui-input-block">
                                            <input type="text" name="cardid" required lay-verify="required" placeholder="请输入卡号" autocomplete="off" class="layui-input">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2 plr-none">
                                    <div class="layui-form-item">
                                        <label class="layui-form-label">客&nbsp;&nbsp;&nbsp; 户</label>
                                        <div class="layui-input-block">
                                            @Html.DropDownList("ddlGuestTypeList", (IEnumerable<SelectListItem>)ViewBag.GuestTypeList)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2 plr-none">
                                    <div class="layui-form-item">
                                        <label class="layui-form-label">客&nbsp;&nbsp;&nbsp; 类</label>
                                        <div class="layui-input-block">
                                            @Html.DropDownList("ddlGuestCategoryList", (IEnumerable<SelectListItem>)ViewBag.GuestCategoryList)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2 plr-none">
                                    <div class="layui-form-item">
                                        <label class="layui-form-label">价&nbsp;&nbsp;&nbsp; 类</label>
                                        <div class="layui-input-block">
                                            @Html.DropDownList("ddlRoomPriceCategoryList", (IEnumerable<SelectListItem>)ViewBag.RoomPriceCategoryList)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2 plr-none">
                                    <div class="layui-form-item">
                                        <label class="layui-form-label">市&nbsp;&nbsp;&nbsp; 场</label>
                                        <div class="layui-input-block">
                                            @Html.DropDownList("ddlClientSourceList", (IEnumerable<SelectListItem>)ViewBag.ClientSourceList)
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div class="row mt">
                                <div class="col-md-2 plr-none">
                                    <div class="layui-form-item">
                                        <label class="layui-form-label">房&nbsp;&nbsp;&nbsp; 价</label>
                                        <div class="layui-input-block">
                                            <input type="text" name="price" lay-verify="number" autocomplete="off" placeholder="请输入房价" class="layui-input">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2 plr-none">
                                    <div class="layui-form-item">
                                        <label class="layui-form-label">价&nbsp;&nbsp;&nbsp; 构</label>

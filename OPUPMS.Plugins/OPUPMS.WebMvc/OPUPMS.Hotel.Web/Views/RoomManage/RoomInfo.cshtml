@{
    Layout = Url.Content(Plugin.Instance.GetLayoutPath("Shared/LayoutTemplate.cshtml"));
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    @StylesEx.Render(Plugin.Instance.Name, "RoomInfoStyle")
   
</head>
<body>

    <div class="centent ov">

        <div class="col-md-10 pop_rightbody pl-none">

            <div class="xian p-sm b-fff">
                <ul class="nav nav-tabs tbas_link" role="tablist">
                    <li role="presentation" class="active">
                        <a href="#room_data" aria-controls="room_data" role="tab" data-toggle="tab">1001房间</a>
                    </li>
                    <li style="float: right;" class="help_pop">
                        <a href="javascript:void(0);" onclick="add_relation_room();">添加联房</a>
                    </li>
                </ul>
                <div class="tab-content b-fff row">

                                            <input type="text" name="price" placeholder="请输入物品名称" class="layui-input">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 pr-none">
                                    <div class="layui-form-item">
                                        <label class="layui-form-label">备注信息</label>
                                        <div class="layui-input-block">
                                            <input type="text" name="price" placeholder="备注内容" class="layui-input">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <section id="service_jsj" style="display: none;">
                                <!-- 接机信息 -->
                                <div id="" class="row">
                                    <div class="col-md-1 pl-none">
                                        <h3 class="tl label-title" style="line-height: 32px;">接机 </h3>
                                    </div>
                                    <div class="col-md-2 ">
                                        <div class="layui-form-item">
                                            <label class="layui-form-label">机场</label>
                                            <div class="layui-input-block">
                                                <input type="text" name="price" class="layui-input">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-2 ">
                                        <div class="layui-form-item">
                                            <label class="layui-form-label">航班信息</label>
                                            <div class="layui-input-block">
                                                <input type="text" name="price" placeholder="请输入航班信息" class="layui-input">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-2 ">
                                        <div class="layui-form-item">
                                            <label class="layui-form-label">抵时</label>
                                            <div class="layui-input-block">
                                                <input type="text" name="price" class="layui-input">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-2 ">
                                        <div class="layui-form-item">
                                            <label class="layui-form-label">离时</label>
                                            <div class="layui-input-block">
                                                <input type="text" name="price" class="layui-input">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-1_5 ">
                                        <div class="layui-form-item">
                                            <label class="layui-form-label">车辆</label>
                                            <div class="layui-input-block">
                                                <input type="text" name="price" class="layui-input">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-1_5 ">
                                        <div class="layui-form-item">
                                            <label class="layui-form-label">司机</label>
                                            <div class="layui-input-block">
                                                <input type="text" name="price" class="layui-input">
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- 送机信息 -->
                                <div id="service_jsj2" class="row">
                                    <div class="col-md-1 pl-none">
                                        <h3 class="tl label-title" style="line-height: 32px;">送机 </h3>
                                    </div>
                                    <div class="col-md-2 ">
                                        <div class="layui-form-item">
                                            <label class="layui-form-label">机场</label>
                                            <div class="layui-input-block">
                                                <input type="text" name="price" class="layui-input">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-2 ">
                                        <div class="layui-form-item">
                                            <label class="layui-form-label">航班信息</label>
                                            <div class="layui-input-block">
                                                <input type="text" name="price" placeholder="请输入航班信息" class="layui-input">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-2 ">
                                        <div class="layui-form-item">
                                            <label class="layui-form-label">抵时</label>
                                            <div class="layui-input-block">
                                                <input type="text" name="price" class="layui-input">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-2 ">
                                        <div class="layui-form-item">
                                            <label class="layui-form-label">离时</label>
                                            <div class="layui-input-block">
                                                <input type="text" name="price" class="layui-input">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-1_5 ">
                                        <div class="layui-form-item">
                                            <label class="layui-form-label">车辆</label>
                                            <div class="layui-input-block">
                                                <input type="text" name="price" class="layui-input">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-1_5 ">
                                        <div class="layui-form-item">
                                            <label class="layui-form-label">司机</label>
                                            <div class="layui-input-block">
                                                <input type="text" name="price" class="layui-input">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </section>

                            <!-- 添加服务信息 -->
                            <div id="service_fw" class="row" style="display: none;">
                                <div class="col-md-1 pl-none">
                                    <h3 class="tl label-title" style="line-height: 32px;">服务信息 </h3>
                                </div>
                                <div class="col-md-2 ">
                                    <div class="layui-form-item">
                                        <label class="layui-form-label">服务</label>
                                        <div class="layui-input-block">
                                            <select name="paytype" lay-verify="required">
                                                <option value="">无</option>
                                                <option value="0">需要无线网</option>
                                                <option value="1">银联</option>
                                                <option value="2">微信</option>
                                                <option value="2">支付宝</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 ">
                                    <div class="layui-form-item">
                                        <label class="layui-form-label">服务备注</label>
                                        <div class="layui-input-block">
                                            <input type="text" name="price" placeholder="请输入服务备注信息" class="layui-input">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- 叫醒服务信息 -->
                            <div id="service_jx" class="row" style="display: none;">
                                <div class="col-md-1 pl-none">
                                    <h3 class="tl label-title" style="line-height: 32px;">叫醒服务 </h3>
                                </div>
                                <div class="col-md-2 ">
                                    <div class="layui-form-item">
                                        <label class="layui-form-label">叫醒时间</label>
                                        <div class="layui-input-block">
                                            <input type="text" name="price" class="layui-input">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>




                        <!-- 开房客户信息1 -->
                        <div class="roominfo-user_h xian p-sm row mt-sm">
                            <h3 class="tl label-title">客户信息 <a href="#" class="fr btn btn-info btn-xs" title="">添加客人</a></h3>

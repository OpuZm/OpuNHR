                                    <a href="#" title="扫描身份证">
                                        <img class="media-object" src="@Url.Content(Plugin.Instance.GetContentPath("Images/usersao.png"))" alt="...">
                                    </a>
                                </div>
                                <div class="col-md-11  mt-sm">
                                    <div class="row">
                                        <div class="col-md-2 pl-none">
                                            <div class="layui-form-item sm">
                                                <label class="layui-form-label">姓名</label>
                                                <div class="layui-input-block">
                                                    <input type="text" name="name" value="" placeholder="姓名" class="layui-input">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-1 plr-none">
                                            <input type="text" name="cardid" placeholder="英文/拼音" class="layui-input">
                                        </div>
                                        <div class="col-md-2 pr-none">
                                            <div class="layui-form-item sm">
                                                <label class="layui-form-label">性别</label>
                                                <div class="layui-input-block">
                                                    @Html.DropDownList("ddlGenderList", (IEnumerable<SelectListItem>)ViewBag.GenderList)
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-2 pr-none">
                                            <div class="layui-form-item sm">
                                                <label class="layui-form-label">房价</label>
                                                <div class="layui-input-block flex">
                                                    <input type="text" name="cardid" placeholder="房价" title="房价" class="layui-input flex_item">

@using OPUPMS.Domain.Restaurant.Model.Dtos;
@{
    Layout = Url.Content(Plugin.Instance.GetLayoutPath("Shared/_LayoutDetail.cshtml"));
    Dictionary<int, string> OrderSources = ViewBag.OrderSources;
    TableCreateDTO Table = ViewBag.Table;
    List<MarketListDTO> Markets = ViewBag.Markets;
}

<div class="container">
    <form class="form-horizontal" id="SubmitForm">
        <input type="hidden" value="@Table.Restaurant" id="Cyct" name="Cyct" />
        <h3 class="text-center">台号:@Table.Name</h3>
        <div class="form-group">
            <label for="" class="col-xs-2 control-label">订单来源:</label>
            <div class="col-xs-4">
                <select id="CyddOrderSource" name="CyddOrderSource" class="form-control">
                    <option value="0">请选择</option>
                    @{ 
                        if (OrderSources.Any())
                        {
                            foreach (var item in OrderSources)
                            {
                                <option value="@item.Key">@item.Value</option>
                            }
                        }
                    }
                </select>
            </div>
            <label for="" class="col-xs-2 control-label">就餐人数:</label>
            <div class="col-xs-4">
                <input type="text" class="form-control" id="PersonNum" name="PersonNum" />
            </div>
        </div>
        <div class="form-group">
            <label for="ContactPerson" class="col-xs-2 control-label">联系人:</label>
            <div class="col-xs-4">
                <input type="text" class="form-control" id="ContactPerson" name="ContactPerson" />
            </div>
            <label for="ContactTel" class="col-xs-2 control-label">联系电话:</label>
            <div class="col-xs-4">
                <input type="text" class="form-control" id="ContactTel" name="ContactTel" />
            </div>
        </div>
        <div class="form-group">
            <label for="" class="col-xs-2 control-label">分市:</label>
            <div class="col-xs-4">
                <select id="Cyfs" name="Cyfs" class="form-control">
                    <option value="0">请选择</option>
                    @{
                        if (Markets.Any())
                        {
                            foreach (var item in Markets)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        }
                    }
                </select>
            </div>
            <label for="ReserveDate" class="col-xs-2 control-label">用餐时间:</label>
            <div class="col-xs-4">
                <input type="text" class="form-control datetimepicker" id="ReserveDate" name="ReserveDate" />
            </div>
        </div>
        @*<div class="form-group">
            <label for="DepositAmount" class="col-xs-2 control-label">订金:</label>
            <div class="col-xs-4">
                <input type="text" class="form-control" id="DepositAmount" name="DepositAmount" />
            </div>
        </div>*@
        <div class="form-group">
            <label for="" class="col-xs-2 control-label">台号选择:</label>
            <div class="col-xs-10">
                <input type="text" class="form-control" id="TableIds" name="TableIds" value="@Table.Name" readonly />
            </div>
        </div>
        <div class="form-group">
            <label for="Remark" class="col-xs-2 control-label">备注信息:</label>
            <div class="col-xs-10">
                <textarea id="Remark" name="Remark" class="form-control" rows="4"></textarea>
            </div>
        </div>
        <div class="form-group text-center">
            <button class="btn btn-primary" type="submit">提交</button>
            <button class="btn btn-default closeAll" type="button">取消</button>
        </div>
    </form>
</div>
@section FooterScripts{
<script>
    var tabIds = [];
    tabIds.push('@Table.Id');

    $(function () {
        var pageJs = editJs.Create();
        pageJs.init();
    })


    function GetChose(res) {
        if (res != null) {
            tabIds = [];
            var tabName = [];
            $(res).each(function (i,obj) {
                tabIds.push(obj.Id);
                tabName.push(obj.Name);
            })
            $("#TableIds").val(tabName.join(","));
        }
    }

    var editJs = {
        Create: function () {
            var editor = {};
            var layindex;

            var bindAction = function () {
                var height = $(document).height() - 100;
                var width = $(document).width() - 100;
                var newDate = new Date();
                var t = newDate.toJSON();

                $('.datetimepicker').datetimepicker({
                    language: 'zh-CN',//显示中文
                    format: 'yyyy-mm-dd hh:ii',//显示格式
                    autoclose: true,
                    startDate: new Date(t)
                })

                $("#SubmitForm").validate({
                    rules: {
                        CyddOrderSource: {
                            min: 1
                        },
                        PersonNum: {
                            isIntGteZero:true
                        },
                        Cyfs: {
                            min:1
                        },
                        DepositAmount: {
                            isFloatGteZero: true,
                            isFloat: true
                        },
                        ReserveDate: {
                            required: true
                        }
                    },
                    messages: {
                        CyddOrderSource: {
                            min: "请选择订单来源"
                        },
                        Cyfs: {
                            min:"请选择分市"
                        }
                    },
                    errorPlacement: function (error, element) {
                        error.appendTo(element.parent());
                    },
                    submitHandler: function (label) {
                        Submit();
                    }
                })

                $("#TableIds").click(function () {
                    var isContinue = true;
                    if ($("#ReserveDate").val()=="") {
                        isContinue = false;
                    }
                    if ($("#Cyfs").val() <= 0) {
                        isContinue = false;
                    }
                    if (isContinue) {
                        var para = "RestaurantId=" +@Table.Restaurant +"&ReverDate=" + $("#ReserveDate").val() + "&Market=" + $("#Cyfs").val() + "&TableIds=" + tabIds.join(",");
                        layer.open({
                            type: 2,
                            title: "选择桌号",
                            area: [width + "px", height + "px"],
                            content: "/Res/Table/ChoseTable?"+para,
                            maxmin: false
                        })
                    }
                    else {
                        layer.msg('请选择用餐时间和分市', {
                            time: 4000
                        })
                    }
                })

                function Submit() {
                    if (tabIds.length <= 0) {
                        layer.msg('请至少选择一个桌号进行预定操作', {
                            time: 4000
                        });
                        return false;
                    }
                    var deposite = $("#DepositAmount").val() == "" ? 0 : $("#DepositAmount").val();
                    var para = { req: { CyddOrderSource: $("#CyddOrderSource").val(), PersonNum: $("#PersonNum").val(), ContactPerson: $("#ContactPerson").val(), ContactTel: $("#ContactTel").val(), R_Market_Id: $("#Cyfs").val(), ReserveDate: $("#ReserveDate").val(), DepositAmount: deposite, Remark: $("#Remark").val(), R_Restaurant_Id:'@Table.Restaurant' }, TableIds: tabIds };
                    $.ajax({
                        type: "post",
                        url: "/Res/Home/ReserveCreate",
                        dataType: "json",
                        contentType: "application/json; charset=utf-8",
                        data: JSON.stringify(para),
                        async: false,
                        beforeSend: function (XMLHttpRequest) {
                            layindex = layer.open({
                                type: 3,
                                shadeClose: false,
                            });
                        },
                        success: function (data, textStatus) {
                            if (data["Data"] > 0) {
                                layer.alert("预定成功", function () {
                                    parent.Refresh();
                                    parent.layer.closeAll();
                                })
                                //layer.confirm("提交完成", {
                                //    btn: ['进行点餐操作', '返回'] //按钮
                                //}, function () {
                                //    location.reload();
                                //}, function () {
                                //    parent.layer.closeAll();
                                //});
                                parent.Refresh();
                            } else {
                                layer.alert(data["Message"]);
                            }
                        },
                        complete: function (XMLHttpRequest, textStatus) {
                            layer.close(layindex);
                        }
                    });
                }

                $(".closeAll").click(function () {
                    parent.layer.closeAll();
                })
            }

            editor.init = function () {
                bindAction();
            }

            return editor;
        }
    }
</script>
}

